@model Department
@{
    ViewData["Title"] = "Details";
}

<h1>Department Details</h1>

<br />
<br />
<br />

<div>

    <div class="form-group">
        <label asp-for="Code" class="form-control-label"></label>
        <input asp-for="Code" class="form-control" disabled />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="form-control-label"></label>
        <input asp-for="Name" class="form-control" disabled />
        <span asp-validation-for="Name" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label asp-for="DateOfCreation" class="form-control-label"></label>
        <input asp-for="DateOfCreation" class="form-control" disabled />
    </div>
    <br />
    <br />

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-light">Back To List</a>

</div>
