@model RoleViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Role</h1>

<br />
<br />

<form asp-action="Edit" enctype="multipart/form-data">

    <partial name="RolePartialViews/EditCreatePartialView" model="@Model" />

    <a asp-action="AddOrRemoveUsers" asp-route-roleId="@Model.Id" class="btn btn-success">Add Or Remove User</a>


    <input type="submit" value="Save" class="btn btn-warning" />
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>

@section Validation {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
